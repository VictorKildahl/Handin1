<Application x:Class="TheDebtBook.App"
             xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
             xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
             xmlns:local="clr-namespace:TheDebtBook"
             StartupUri="Views/MainWindow.xaml">
    <Application.Resources>
        <DataTemplate x:Key="personTemplate">
            <WrapPanel>
                <TextBlock Text="{Binding Path=Name}" Padding="5, 0" 
                           Foreground="{Binding Path=Name}"
                           Width="150" 
                />
                <TextBlock Text="{Binding Path=Debt}" Padding="5, 0"
                           Foreground="{Binding Path=Debt}"
                           Width="100"
                />
            </WrapPanel>
        </DataTemplate>
    </Application.Resources>
</Application>

    